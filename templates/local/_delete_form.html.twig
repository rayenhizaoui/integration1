<form method="post" action="{{ path('app_local_delete', {'id': local.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ local.id) }}">
    <button style="font-size:24px ; border-color: transparent ; background-color: transparent"  > <i class="fa fa-trash-o" style="color:red"></i></button>
</form>
