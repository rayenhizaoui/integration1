{% extends 'basepageFront1.html.twig' %}
{% block title %}Détails de jeu{% endblock %}
{% block header %}Détails de jeu{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Liste des jeux</h4>
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>score</th>
                                    <th>Resultat</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for jeu in jeux %}
                                    <tr>
                                        <td>{{ jeu.id }}</td>
                                        <td>{{ jeu.nom }}</td>
                                        <td>{{ jeu.type}}</td>
                                        <td>{{ jeu.score }}</td>
                                        <td>{{ jeu.resultat }}</td>
                                      
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucune équipe trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                   <a href="{{ path('app_jeu_new_front') }}"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ajouter</button></a>

                </div>
            </div>
        </div>
    </div>


{% endblock %}