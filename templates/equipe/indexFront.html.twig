{% extends 'basepageFront.html.twig' %}
{% block title %}Détails de l'équipe{% endblock %}
{% block header %}Détails de l'équipe{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Liste des équipes</h4>
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Liste des Joueurs</th>
                                    <th>Nombre de Joueurs</th>
                                    <th>Jeu</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for equipe in equipes %}
                                    <tr>
                                        <td>{{ equipe.id }}</td>
                                        <td>{{ equipe.nom }}</td>
                                        <td>{{ equipe.listeJoueur }}</td>
                                        <td>{{ equipe.nbrJoueur }}</td>
                                        <td>{{ equipe.jeu.nom }}</td>
                                      
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucune équipe trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                   <a href="{{ path('app_equipe_new_front') }}"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ajouter</button></a>

                </div>
            </div>
        </div>
    </div>


{% endblock %}