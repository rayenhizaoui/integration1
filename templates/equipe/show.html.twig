{% extends 'basePageBack.html.twig' %}

{% block title %}Détails de l'équipe{% endblock %}

{% block content %}
    <h1>Détails de l'équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Liste des joueurs</th>
                <td>{{ equipe.listeJoueur }}</td>
            </tr>
            <tr>
                <th>Nombre de joueurs</th>
                <td>{{ equipe.nbrJoueur }}</td>
            </tr>
            <tr>
                <th>Jeu</th>
                <td>{{ equipe.jeu.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}">Retour à la liste des équipes</a>

    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">Modifier</a>

    {{ include('equipe/_delete_form.html.twig') }}
{% endblock %}
