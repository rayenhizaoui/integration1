{% extends 'base.html.twig' %}

{% block content %}


	<div class="page-heading header-text">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h3>Ajouter billet</h3>
				</div>
			</div>
		</div>
	</div>


	<div class="container">
		<div class="row">
			<div class="col-lg-6 offset-lg-3">
				<h2 class="text-center">ㅤㅤㅤㅤ</h2>
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

				<div class="form-container">
					<div class="form-group">
						{{ form_label(form.cin) }}
						{{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.cin) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.type) }}
						{{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.type) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.email) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.email) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.place) }}
						{{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.place) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.user) }}
						{{ form_widget(form.user, {'attr': {'class': 'form-control datepicker'}}) }}
						<span style="color:red;">{{ form_errors(form.user) }}</span>
					</div>


					<button type="submit" class="btn btn-primary">Ajouter</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>


{% endblock %}
