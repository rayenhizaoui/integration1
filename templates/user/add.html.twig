{% extends 'base.html.twig' %}

{% block content %}


	<div class="page-heading header-text">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h3>Inscription</h3>
				</div>
			</div>
		</div>
	</div>


	<div class="container">
		<div class="row">
			<div class="col-lg-6 offset-lg-3">
				<h2 class="text-center">ㅤㅤㅤㅤ</h2>
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

				<div class="form-container">
					<div class="form-group">
						{{ form_label(form.cin) }}
						{{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.cin) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.username) }}
						{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.username) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.numero) }}
						{{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.numero) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.email) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.email) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.adresse) }}
						{{ form_widget(form.adresse, {'attr': {'class': 'form-control datepicker'}}) }}
						<span style="color:red;">{{ form_errors(form.adresse) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.password) }}
						{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.password) }}</span>
					</div>

					<div class="form-group">
						{{ form_label(form.role) }}
						{{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
						<span style="color:red;">{{ form_errors(form.role) }}</span>
					</div>

					<button type="submit" class="btn btn-primary">Ajouter</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>


{% endblock %}
